@page
@model MESSystem.Pages.Cards.IndexModel
@{
    ViewData["Title"] = "현장 카드 목록";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-clipboard-list me-2"></i>
                현장 카드 목록
            </h4>
        </div>
        <div class="card-body">
            <!-- 필터 영역 -->
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-3">
                    <label class="form-label">상태</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">전체</option>
                        <option value="대기" selected="@(Model.Status == "대기")">대기</option>
                        <option value="작업중" selected="@(Model.Status == "작업중")">작업중</option>
                        <option value="완료" selected="@(Model.Status == "완료")">완료</option>
                        <option value="보류" selected="@(Model.Status == "보류")">보류</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">분류</label>
                    <select name="categoryId" class="form-select" onchange="this.form.submit()">
                        <option value="">전체</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">
                                @category.Name
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">검색</label>
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="카드번호 또는 품목명 검색" value="@Model.SearchTerm">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> 검색
                    </button>
                </div>
            </form>

            <!-- 통계 정보 -->
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-warning">대기</h5>
                            <h2>@Model.Cards.Count(c => c.Status == "대기")</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-primary">작업중</h5>
                            <h2>@Model.Cards.Count(c => c.Status == "작업중")</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-success">완료</h5>
                            <h2>@Model.Cards.Count(c => c.Status == "완료")</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-muted">보류</h5>
                            <h2>@Model.Cards.Count(c => c.Status == "보류")</h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 카드 목록 테이블 -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 15%">카드번호</th>
                            <th style="width: 10%">분류</th>
                            <th style="width: 20%">품목명</th>
                            <th style="width: 10%">수량</th>
                            <th style="width: 10%">상태</th>
                            <th style="width: 15%">출고일시</th>
                            <th style="width: 10%">품목수</th>
                            <th style="width: 10%">작업</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Cards.Any())
                        {
                            @foreach (var card in Model.Cards)
                            {
                                <tr class="@(card.IsModified ? "table-warning" : "")">
                                    <td>
                                        <strong>@card.CardNumber</strong>
                                        @if (card.IsModified)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">수정됨</span>
                                        }
                                    </td>
                                    <td>@card.Category.Name</td>
                                    <td>
                                        @{
                                            var firstItem = card.CardItems.FirstOrDefault();
                                            if (firstItem != null)
                                            {
                                                @firstItem.OrderItem.Product.Name
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var totalQty = card.CardItems.Sum(ci => ci.Quantity);
                                            @totalQty
                                        }
                                    </td>
                                    <td>
                                        @if (card.Status == "대기")
                                        {
                                            <span class="badge bg-warning text-dark">대기</span>
                                        }
                                        else if (card.Status == "작업중")
                                        {
                                            <span class="badge bg-primary">작업중</span>
                                        }
                                        else if (card.Status == "완료")
                                        {
                                            <span class="badge bg-success">완료</span>
                                        }
                                        else if (card.Status == "보류")
                                        {
                                            <span class="badge bg-secondary">보류</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">@card.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @card.Order.ShippingDate.ToString("yyyy-MM-dd")<br>
                                        <small class="text-muted">
                                            @(card.Order.ShippingTime.HasValue ? card.Order.ShippingTime.Value.ToString(@"hh\:mm") : "-")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@card.CardItems.Count</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/Cards/Detail/@card.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> 상세
                                            </a>
                                            <a href="/Cards/Print/@card.Id" target="_blank" class="btn btn-sm btn-secondary">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p class="mb-0">조회된 카드가 없습니다.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- 페이지 정보 -->
            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-2"></i>
                총 <strong>@Model.Cards.Count</strong>개의 카드가 조회되었습니다.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 자동 새로고침 (30초마다)
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}
