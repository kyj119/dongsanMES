@page
@model MESSystem.Pages.Admin.Clients.CreateModel
@{
    ViewData["Title"] = "거래처 등록";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-plus-circle"></i> 거래처 등록</h2>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> 목록
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Input.Name" class="form-label">거래처명 *</label>
                        <input asp-for="Input.Name" class="form-control" required>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Email" class="form-label">이메일</label>
                        <input asp-for="Input.Email" type="email" class="form-control">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Input.Address" class="form-label">주소</label>
                        <input asp-for="Input.Address" class="form-control">
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Phone" class="form-label">전화번호</label>
                        <input asp-for="Input.Phone" class="form-control" placeholder="예: 02-1234-5678">
                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Mobile" class="form-label">휴대폰</label>
                        <input asp-for="Input.Mobile" class="form-control" placeholder="예: 010-1234-5678">
                        <span asp-validation-for="Input.Mobile" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Input.Note" class="form-label">비고</label>
                        <textarea asp-for="Input.Note" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Input.Note" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <div class="form-check">
                            <input asp-for="Input.IsActive" class="form-check-input" type="checkbox">
                            <label asp-for="Input.IsActive" class="form-check-label">활성 상태</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> 저장
                    </button>
                    <a asp-page="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> 취소
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
