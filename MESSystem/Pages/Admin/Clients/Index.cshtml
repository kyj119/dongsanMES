@page
@model MESSystem.Pages.Admin.Clients.IndexModel
@{
    ViewData["Title"] = "거래처 관리";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-building"></i> 거래처 관리</h2>
        <div>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 거래처 등록
            </a>
        </div>
    </div>

    <!-- 검색 -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="거래처명 검색" value="@Model.SearchTerm">
                </div>
                <div class="col-md-2">
                    <select name="isActive" class="form-select">
                        <option value="">전체</option>
                        <option value="true" selected="@(Model.IsActive == true)">활성</option>
                        <option value="false" selected="@(Model.IsActive == false)">비활성</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> 검색
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 거래처 목록 -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 20%">거래처명</th>
                            <th style="width: 30%">주소</th>
                            <th style="width: 15%">전화번호</th>
                            <th style="width: 15%">휴대폰</th>
                            <th style="width: 10%">상태</th>
                            <th style="width: 10%">작업</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Clients.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    등록된 거래처가 없습니다.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var client in Model.Clients)
                            {
                                <tr>
                                    <td><strong>@client.Name</strong></td>
                                    <td>@(client.Address ?? "-")</td>
                                    <td>@(client.Phone ?? "-")</td>
                                    <td>@(client.Mobile ?? "-")</td>
                                    <td>
                                        @if (client.IsActive)
                                        {
                                            <span class="badge bg-success">활성</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">비활성</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@client.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    onclick="return confirm('이 거래처를 비활성화하시겠습니까?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <p class="text-muted">
            <i class="bi bi-info-circle"></i> 
            총 <strong>@Model.Clients.Count</strong>개의 거래처가 있습니다.
        </p>
    </div>
</div>
